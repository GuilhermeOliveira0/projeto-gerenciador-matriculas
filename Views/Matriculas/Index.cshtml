@using MatriculasEAD.Models
@model IEnumerable<MatriculasEAD.Models.Matricula>

@{
    ViewData["Title"] = "Gerenciar Matrículas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-graduation-cap text-warning"></i> Gerenciar Matrículas
    </h1>
    <a asp-action="Create" class="btn btn-warning text-dark">
        <i class="fas fa-plus"></i> Nova Matrícula
    </a>
</div>

<!-- Formulários de Busca e Filtro -->
<div class="search-form">
    <form asp-action="Index" method="get" class="row g-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" class="form-control" name="searchString" 
                       value="@ViewBag.SearchString" placeholder="Buscar por aluno ou curso..." />
            </div>
        </div>
        <div class="col-md-4">
            <select name="status" class="form-select">
                <option value="">Todos os Status</option>
                @{
                    var statusOptions = new[] { 
                        new { Value = "Ativa", Text = "Ativa" },
                        new { Value = "Concluida", Text = "Concluída" },
                        new { Value = "Cancelada", Text = "Cancelada" }
                    };
                    string statusAtual = ViewBag.StatusFilter?.ToString() ?? "";
                }
                @foreach (var option in statusOptions)
                {
                    if (option.Value == statusAtual)
                    {
                        <option value="@option.Value" selected>@option.Text</option>
                    }
                    else
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-warning w-100">
                <i class="fas fa-filter"></i> Filtrar
            </button>
        </div>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.SearchString) || ViewBag.StatusFilter != null)
    {
        <div class="mt-2">
            <small class="text-muted">
                @if (!string.IsNullOrEmpty(ViewBag.SearchString))
                {
                    <span>Busca: "<strong>@ViewBag.SearchString</strong>"</span>
                }
                @if (ViewBag.StatusFilter != null)
                {
                    <span class="ms-2">Status: <strong>@ViewBag.StatusFilter</strong></span>
                }
            </small>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary ms-2">
                <i class="fas fa-times"></i> Limpar Filtros
            </a>
        </div>
    }
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Erro:</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>
    <strong>Total de matrículas no banco:</strong> @(ViewBag.TotalMatriculas ?? 0)
</div>

@if (Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-2"></i>Aluno
                            </th>
                            <th>
                                <i class="fas fa-book me-2"></i>Curso
                            </th>
                            <th>
                                <i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(model => model.Data)
                            </th>
                            <th>
                                <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.PrecoPago)
                            </th>
                            <th>
                                <i class="fas fa-flag me-2"></i>@Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                <i class="fas fa-chart-line me-2"></i>@Html.DisplayNameFor(model => model.Progresso)
                            </th>
                            <th>
                                <i class="fas fa-star me-2"></i>@Html.DisplayNameFor(model => model.NotaFinal)
                            </th>
                            <th class="text-center">
                                <i class="fas fa-cogs me-2"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Aluno.Nome)</strong>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Curso.Titulo)
                                </td>
                                <td>
                                    @item.Data.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@item.PrecoPago.ToString("C")</span>
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case StatusMatricula.Ativa:
                                            <span class="badge status-ativa">
                                                <i class="fas fa-play me-1"></i>@Html.DisplayFor(modelItem => item.Status)
                                            </span>
                                            break;
                                        case StatusMatricula.Concluida:
                                            <span class="badge status-concluida">
                                                <i class="fas fa-check me-1"></i>@Html.DisplayFor(modelItem => item.Status)
                                            </span>
                                            break;
                                        case StatusMatricula.Cancelada:
                                            <span class="badge status-cancelada">
                                                <i class="fas fa-times me-1"></i>@Html.DisplayFor(modelItem => item.Status)
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @(item.Progresso == 100 ? "bg-success" : item.Progresso >= 50 ? "bg-warning" : "bg-info")" 
                                             role="progressbar" style="width: @(item.Progresso)%">
                                            @(item.Progresso)%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.NotaFinal.HasValue)
                                    {
                                        <span class="badge bg-primary">@item.NotaFinal.Value.ToString("F1")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-alunoId="@item.AlunoId" asp-route-cursoId="@item.CursoId"
                                           class="btn btn-outline-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-alunoId="@item.AlunoId" asp-route-cursoId="@item.CursoId"
                                           class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-alunoId="@item.AlunoId" asp-route-cursoId="@item.CursoId"
                                           class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
            @if (!string.IsNullOrEmpty(ViewBag.SearchString) || ViewBag.StatusFilter != null)
            {
                <h5>Nenhuma matrícula encontrada</h5>
                <p class="text-muted">Nenhum resultado encontrado com os filtros aplicados.</p>
                <a href="@Url.Action("Index")" class="btn btn-outline-warning me-2">
                    <i class="fas fa-arrow-left"></i> Ver Todas
                </a>
            }
            else
            {
                <h5>Nenhuma matrícula registrada</h5>
                <p class="text-muted">Comece criando a primeira matrícula do sistema.</p>
            }
            <a asp-action="Create" class="btn btn-warning text-dark">
                <i class="fas fa-plus"></i> Primeira Matrícula
            </a>
        </div>
    </div>
}
